{
  "name": "volunteers-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_PATH=. node app.js ||  NODE_PATH=dist node dist/app.js",
    "dev": "cross-env NODE_PATH=src NODE_ENV=development nodemon --exec ts-node src/app.ts",
    "build": "rm -rf dist && tsc && npm run copy-config-to-dist",
    "build-ebs": "npm run build  && cd dist  &&  npm run zip-dist",
    "zip-dist": "zip -r ../Deployment-File.zip . && cd .. ",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "copy-config-to-dist": "cp package*.json dist",
    "test:one-unit": "cross-env NODE_ENV=test NODE_PATH=src mocha --timeout 7000 --exit",
    "test:unit": "npm run test:one-unit --  'src/**/*.unit.test.ts'",
    "tdd": "npm run test:unit -- -w 'src/**/*.unit.test.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
